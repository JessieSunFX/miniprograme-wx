/* pages/diamondExchange/diamondExchange.wxss */
page{
  background:#fff;
}
.topHint {
  display: block;
  width: 100%;
  box-sizing:border-box;
  height: 70rpx;
  line-height:70rpx;
  color:#e22;
  background:#fde8e8;
  padding:0 15px;
  font-size:22rpx;
}
.topHintHide{
  height:0;
}
.marquee_box {
 width: 100%;
 height:100%;
 position: relative;
 overflow:hidden;
}

.marquee_text {
 white-space: nowrap;
 position: absolute;
 top: 0;
}
.topInfo{
  color:#fff;
  font-size:28rpx;
  text-align:center;
  padding:80rpx 0;
  position:relative;
}
.topInfo>image{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  z-index:-1;
}
.topInfo>view{
  height:80rpx;
  line-height:80rpx;
  margin-bottom:30rpx;
}
.topInfo>view>text{
  font-size:80rpx;
}
.topInfo>text{
  display:block;
  height:28rpx;
  line-height:28rpx;
}
.mainBox{
  padding:30rpx;
  background:#f5f5f9;
}
.mainBox>text{
  display:block;
  font-size:26rpx;
  color:#333;
}
.mainBox>view{
  margin-top:30rpx;
}
.mainBox>view>input{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  background:#fff;
  border-radius:10rpx;
  text-align:center;
  font-size:26rpx;
  color:#333;
}
.bottomBox{
  padding:80rpx 30rpx 0;
}
.bottomBox>view{
  margin-top:70rpx;
}
.bottomBox>view>view{
  font-size:22rpx;
  line-height:40rpx;
  color:#333;
}
.confirmInfoModal{
  position:fixed;
  top:0;
  right:0;
  bottom:0;
  left:0;
  background:rgba(0,0,0,0.4);
  z-index:99;
}
.confirmInfoModal>view{
  position:absolute;
  width:80%;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background:#fff;
  box-sizing: border-box;
  border-radius:10rpx;
  padding:0 30rpx;
}
.confirmInfoModal>view>.modalTitle{
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  color:#333;
  
  margin-bottom:30rpx;
  position:relative;
}
.confirmInfoModal>view>.modalTitle:after{
  border-bottom: 1rpx solid #d9d9d9;
  bottom:0;
  content:" ";
  position:absolute;
  left:0;
  right:0;
  height:1px;
  color:#d9d9d9;
}
.confirmInfoModal>view>.modalContent>.contentItem{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size:26rpx;
  color:#333;
  height:40rpx;
  line-height:40rpx;
}
.confirmInfoModal>view>.modalContent>.contentItem>text{
  display:block;
  width:30%;
  text-align:right;
}
.confirmInfoModal>view>.modalContent>.contentItem>view{
  width:70%;
}
.modalBottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin:30rpx 0;
}
.modalBottom>view{
  width:45%;
  height:70rpx;
  line-height:70rpx;
  text-align:center;
  border-radius:10rpx;
  color:#fff;
  font-size:26rpx;
}
.modalBottom>.clearBtn{
  color:#333;
  background:#d9d9d9;
}
.modalBottom>.confirmBtn{
  background:#0bb20c;
}
